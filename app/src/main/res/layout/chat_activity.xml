<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Tickle_me_Pink"
        android:padding="10dp"
        android:id="@+id/upBar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="parent"
            android:textAlignment="center"
            android:textColor="@color/Dark_Purple"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:id="@+id/Username"/>

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/back_button"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/Dark_Purple"
            android:layout_centerVertical="true"
            android:id="@+id/back_button"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/upBar"
        android:layout_above="@id/message_bar"
        android:id="@+id/chat_recycler_view"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        android:id="@+id/message_bar">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Write message"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:background="@color/Seashell"
            android:layout_toLeftOf="@id/send_message_button"
            android:id="@+id/message_input"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_send_24"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            app:tint="@color/Dark_Purple"
            android:id="@+id/send_message_button"
            android:padding="8dp"
            android:layout_marginStart="10dp"/>
    </RelativeLayout>
<!-- TODO meter en la res de string la hint del editText del msg-->

</RelativeLayout>