<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message_cardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:layout_margin="8dp"
    tools:context=".presentation.chat.MessagesChatAdapter">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Message -->
        <TextView
            android:id="@+id/message_inputs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEL STRING CREAR UN REFERENTE"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/French_Rose"
            tools:text="WENAS" />

        <!-- Layout horizontal para fecha y hora -->

    </LinearLayout>

</androidx.cardview.widget.CardView>