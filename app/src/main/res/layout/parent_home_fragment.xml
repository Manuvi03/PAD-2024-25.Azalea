<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentHomeFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Seashell">


    <com.applandeo.materialcalendarview.CalendarView
        android:id="@+id/parenthomefragment_calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        app:daysLabelsColor="@color/Dark_Purple"
        app:headerColor="@color/Cyclomen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:pagesColor="@color/Misty_Rose"
        app:selectionColor="@color/French_Rose"
        app:selectionLabelColor="@color/Cyclomen"
        app:todayLabelColor="@color/Amaranth_Purple" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/parenthomefragment_recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/parenthomefragment_textResult"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/parenthomefragment_textResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/parent_recyclerView_result"
        android:textColor="@color/Licorice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/parenthomefragment_calendarView" />
</androidx.constraintlayout.widget.ConstraintLayout>