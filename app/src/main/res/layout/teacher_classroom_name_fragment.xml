<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Misty_Rose"
    android:id="@+id/teacher_classroom_name_fragment"
    tools:context=".presentation.login.MainActivity">

    <EditText
        android:id="@+id/editTextTextClassRoomName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:textSize="20sp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="@string/ClassRoomName_hint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/acceptClassRoomNameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ClassRoomName_acceptButton"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/Dogwood_Rose"
        android:textColor="@color/Seashell"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextClassRoomName"
        app:layout_constraintStart_toStartOf="@+id/editTextTextClassRoomName"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextClassRoomName" />

    <TextView
        android:id="@+id/ultimoPasoTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:gravity="center"
        android:text="@string/ClassRoomName_lastStepTextView"
        android:textColor="@color/Tickle_me_Pink"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextClassRoomName"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextClassRoomName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextTextClassRoomName" />
</androidx.constraintlayout.widget.ConstraintLayout>